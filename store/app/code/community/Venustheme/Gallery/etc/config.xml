<?xml version="1.0"?>  
<config>  
	<modules>  
		<Venustheme_Gallery>  
			<version>1.1.0</version>  
		</Venustheme_Gallery>  
	</modules>  
	<frontend>
		<translate>
			<modules>
				<Venustheme_Gallery>
					<files>
						<default>Venustheme_Gallery.csv</default>
					</files>
				</Venustheme_Gallery>
			</modules>
		</translate>
		<layout>
			<updates>
				<Venustheme_Gallery>
					<file>venustheme_gallery.xml</file>
				</Venustheme_Gallery>
			</updates>
		</layout>
		<events>
			<controller_action_layout_generate_blocks_after>
				<observers>
					<venustheme_gallery_observer>
						<type>singleton</type>
						<class>Venustheme_Gallery_Model_Observer</class>
						<method>beforeRender</method>
					</venustheme_gallery_observer>
				</observers>
			</controller_action_layout_generate_blocks_after>
		</events>
	</frontend>	
	<global>  		     
		<blocks>
            <venustheme_gallery>
                <class>Venustheme_Gallery_Block</class>
            </venustheme_gallery>
        </blocks>
        <models>
            <venustheme_gallery>
                <class>Venustheme_Gallery_Model</class>
                <resourceModel>venustheme_gallery_mysql4</resourceModel>
            </venustheme_gallery>
            <venustheme_gallery_mysql4>
                <class>Venustheme_Gallery_Model_Mysql4</class>
                <entities>
                    <banner>
                        <table>venustheme_gallery_banner</table>
                    </banner>
                </entities>
            </venustheme_gallery_mysql4>
        </models>
        <helpers>
            <venustheme_gallery>
                <class>Venustheme_Gallery_Helper</class>
            </venustheme_gallery>
        </helpers>
        <resources>
            <venustheme_gallery_setup>
                <setup>
                    <module>Venustheme_Gallery</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </venustheme_gallery_setup>
            <venustheme_gallery_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </venustheme_gallery_write>
            <venustheme_gallery_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </venustheme_gallery_read>
        </resources>
		
	</global>  
	<admin>
        <routers>
            <gallery>
                <use>admin</use>
                <args>
                    <module>Venustheme_Gallery</module>
                    <frontName>gallery</frontName>
                </args>
            </gallery>
        </routers>
    </admin>
	<adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
						<venustheme_gallery>
                            <title>File</title>
                            <sort_order>50</sort_order>
                            <children>
                                <index>
                                    <title>Manage Files</title>
                                    <sort_order>0</sort_order>
                                </index>
                                <new>
                                    <title>Add File</title>
                                    <sort_order>1</sort_order>
                                </new>
                            </children>
                        </venustheme_gallery>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <venustheme_gallery>
                                            <title>Ves Gallery</title>
                                        </venustheme_gallery>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
		<menu>
            <vesextensions module="venustheme_gallery">
                <title>VenusTheme</title>
                <sort_order>50</sort_order>
                <children>
					<gallery translate="title" module="venustheme_gallery">
						<title>Ves Gallery</title>
						<children>
							<add module="venustheme_gallery">
								<title>Add File</title>
								<sort_order>0</sort_order>
								<action>gallery/adminhtml_banner/add</action>
							</add>
							
							
							
							<index module="venustheme_gallery">
								<title>Manage Files</title>
								<sort_order>3</sort_order>
								<action>gallery/adminhtml_banner/index</action>
							</index>
							<configuration translate="title" module="venustheme_gallery">
								<title>Configuration</title>
								<sort_order>4</sort_order>
								<action>adminhtml/system_config/edit/section/venustheme_gallery</action>
							</configuration>
						</children>
					</gallery>
                </children>
            </vesextensions>
        </menu>
        <translate>
			<modules>
				<Venustheme_Gallery>
					<files>
						<default>Venustheme_Gallery.csv</default>
					</files>
				</Venustheme_Gallery>
			</modules>
		</translate>
    </adminhtml>	
		
	<default>
        <venustheme_gallery>
            <venustheme_gallery>
                <show>1</show>    
                <title>Ves Gallery</title>  
				<theme>default</theme>
                <moduleHeight>auto</moduleHeight>
                <moduleWidth>auto</moduleWidth>
				<thumbWidth>200</thumbWidth>                
                <thumbHeight>200</thumbHeight>   
				<source>catalog</source> 
				<thumbnailMode>1</thumbnailMode>  
				<enable_jquery>0</enable_jquery>
				<blockPosition>content</blockPosition>
				<blockDisplay>before</blockDisplay>
				<menuAssignment>Mage_Cms_index</menuAssignment>
				<source>catalog</source>
			</venustheme_gallery>

			
			<file_source_setting>
				<imagecategory></imagecategory>
			</file_source_setting>
			<effect_setting>
				<titleMaxchar>15</titleMaxchar>
				<descMaxchar>200</descMaxchar>
				<slide_width>auto</slide_width>
				<slide_height>300</slide_height>
				<auto_play>1</auto_play>
				<duration>500</duration>
				<scroll_items>1</scroll_items>
				<limit_cols>4</limit_cols>
				<show_button>1</show_button>
				<show_pager>1</show_pager>
				<show_title>1</show_title>
				<show_date>0</show_date>
				<show_desc>1</show_desc>
				<show_price>1</show_price>
				<show_pricewithout>1</show_pricewithout>
				<show_addcart>1</show_addcart>
			</effect_setting>

        </venustheme_gallery>
    </default>
</config>  